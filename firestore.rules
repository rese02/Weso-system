rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all reads and writes by default.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow access to users and hotels for authenticated users.
    // This is a placeholder and should be refined with specific role-based access control.
    match /(users|hotels|bookings|guestLinks)/{id} {
        allow read, write: if request.auth != null;
    }
  }
}
